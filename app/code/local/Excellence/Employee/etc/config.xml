<?xml version="1.0"?>
<config>
    <modules>
        <Excellence_Employee>
            <version>1.0.0</version>
        </Excellence_Employee>
    </modules>
    <global>
        <helpers>
            <excellence_employee>
                <class>Excellence_Employee_Helper</class>
            </excellence_employee>
        </helpers>
        <blocks>
            <excellence_employee>
                <class>Excellence_Employee_Block</class>
            </excellence_employee>
        </blocks>
        <models>
            <excellence_employee>
                <class>Excellence_Employee_Model</class>
                <resourceModel>excellence_employee_mysql4</resourceModel>
            </excellence_employee>
            <excellence_employee_mysql4>
                <class>Excellence_Employee_Model_Mysql4</class>
                <entities>
                    <employee>
                        <table>excellence_employee_employees</table>
                    </employee>
                </entities>
            </excellence_employee_mysql4>
        </models>
        <resources>
            <excellence_employee_setup>
                <setup>
                    <module>Excellence_Employee</module>
                </setup>
            </excellence_employee_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <excellence_employee>
                <use>admin</use>
                <args>
                    <module>Excellence_Employee</module>
                    <frontName>employee</frontName>
                </args>
            </excellence_employee>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <excellence>
                <title>Manage Excellence Module</title>
                <sort_order>9999</sort_order>
                <children>
                    <employee>
                        <title>Manage Employees</title>
                        <action>employee/adminhtml_employee</action>
                    </employee>
                </children>
            </excellence>
        </menu>
        <acl>
            <resources>
                <admin>
                    <chilren>
                        <excellence>
                            <title>Allow to Manage Excellence Module</title>
                            <chilren>
                                <employee>
                                    <title>Allow to Manage Employees</title>
                                </employee>
                            </chilren>
                        </excellence>
                    </chilren>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <excellence_employee>
                    <file>excellence/employee.xml</file>
                </excellence_employee>
            </updates>
        </layout>
    </adminhtml>
</config>